{
    "manifest_version": 3,
    "name": "Amoozeshyar",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://stdn.iau.ir/*"
            ],
            "js": [
                "contentScript.ts"
            ]
        }
    ],
    "icons": {
        "16": "logo.png",
        "32": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "scripting"
    ]
}